  .contact-mobile
    .icon
      %i.fa.fa-microphone
    .contact-title Contact
    .contact-subtitle Can I get yo numba
    .contact-box
      .thanks-mobile
        %span Woah.
        %br
        %span Thanks for your message!
      .form-mobile
        = simple_form_for :message, url: message_path do |f|
          .message.name-input
            = f.input :name, placeholder: 'Name'
          .message.email-input
            = f.input :email, placeholder: 'Email'
          .message.text
            = f.input :text, as: :text, placeholder: "Write me a message. I swear on Syracuse Basketball that I'll respond!"
          .submit Send Message
          .submit-icon
